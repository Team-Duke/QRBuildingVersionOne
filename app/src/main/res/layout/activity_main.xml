<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffafb1ff">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbey"
        android:id="@+id/Abbeybutton"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/Bishopsbutton"
        android:layout_toStartOf="@+id/Bishopsbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cathedral"
        android:id="@+id/Cathedralbutton"
        android:layout_alignTop="@+id/Abbeybutton"
        android:layout_toRightOf="@+id/Bishopsbutton"
        android:layout_toEndOf="@+id/Bishopsbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bishops"
        android:id="@+id/Bishopsbutton"
        android:layout_alignTop="@+id/Abbeybutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deans"
        android:id="@+id/Deansbutton"
        android:layout_below="@+id/Abbeybutton"
        android:layout_alignLeft="@+id/Abbeybutton"
        android:layout_alignStart="@+id/Abbeybutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gibney"
        android:id="@+id/Gibneybutton"
        android:layout_alignBottom="@+id/Deansbutton"
        android:layout_toRightOf="@+id/Deansbutton"
        android:layout_toLeftOf="@+id/Cathedralbutton"
        android:layout_toStartOf="@+id/Cathedralbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knights"
        android:id="@+id/Knightsbutton"
        android:layout_below="@+id/Cathedralbutton"
        android:layout_toRightOf="@+id/Bishopsbutton"
        android:layout_toEndOf="@+id/Bishopsbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monks"
        android:id="@+id/Monksbutton"
        android:layout_below="@+id/Deansbutton"
        android:layout_toLeftOf="@+id/Sessionbutton"
        android:layout_toStartOf="@+id/Sessionbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session"
        android:id="@+id/Sessionbutton"
        android:layout_below="@+id/Deansbutton"
        android:layout_toRightOf="@+id/Deansbutton"
        android:layout_toEndOf="@+id/Deansbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temple"
        android:id="@+id/Templebutton"
        android:layout_below="@+id/Knightsbutton"
        android:layout_toRightOf="@+id/Sessionbutton"
        android:layout_toEndOf="@+id/Sessionbutton" />

</RelativeLayout>
