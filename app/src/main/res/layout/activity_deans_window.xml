<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gary.qrbuildingversionone.DeansWindow"
    android:background="#ffafb1ff">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deansimageView"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:src="@drawable/deans"
        android:scaleType="fitStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deans_info"
        android:id="@+id/deanstextView"
        android:layout_marginBottom="68dp"
        android:longClickable="false"
        android:singleLine="false"
        android:layout_alignBottom="@+id/deansimageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deans Building"
        android:id="@+id/LargeDeans"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/deansimageView"
        android:layout_alignEnd="@+id/deansimageView" />

</RelativeLayout>
